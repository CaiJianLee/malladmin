abs>\r\n    <component :goodsCategoryList=\"goodsCategoryList\" :is=\"activeName\" />\r\n  </el-container>\r\n</template>\r\n\r\n<script>\r\nimport allGoods from \"./allGoods\";\r\nimport newGoods from \"./newGoods\";\r\nimport hotGoods from \"./hotGoods\";\r\nimport { getGoodsCategory } from \"../goodsCategory/request\";\r\nimport { STATUS_CODE } from \"@/commonutils/common\";\r\n\r\nexport default {\r\n  name: \"index\",\r\n  data() {\r\n    return {\r\n      activeName: \"allGoods\",\r\n      goodsCategoryList: []\r\n    };\r\n  },\r\n  components: {\r\n    allGoods,\r\n    newGoods,\r\n    hotGoods\r\n  },\r\n  computed: {\r\n    route() {\r\n      return this.$route;\r\n    }\r\n  },\r\n  created() {\r\n    this.getGoodsCategoryList();\r\n  },\r\n  methods: {\r\n    /**\r\n     * 获取所有商品分类\r\n     * @returns {Promise<void>} 所有商品分类\r\n     */\r\n    async getGoodsCategoryList() {\r\n      const data = await getGoodsCategory({\r\n        isAll: true\r\n      });\r\n      const lookData = arr => {\r\n        if (arr.length) {\r\n          arr.forEach(item => {\r\n            if (!item.children.length) {\r\n              delete item.children;\r\n            } else {\r\n              lookData(item.children);\r\n            }\r\n          });\r\n        }\r\n      };\r\n      if (data.code === STATUS_CODE.success) {\r\n        lookData((this.goodsCategoryList = data.result.list));\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style lang=\"scss\">\r\n.goodsManage-style {\r\n  .el-tabs__nav-scroll {\r\n    padding-left: 22px;\r\n  }\r\n}\r\n</style>\r\n"]}]}